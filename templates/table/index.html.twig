{% extends 'base.html.twig' %}

{% block title %}Hello TableController!{% endblock %}

{% block body %}
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Objective Ref</th>
                                <th>Status</th>
                                <th>Impact Area</th>
                                <th>Objective</th>
                                <th>Baseline</th>
                                <th>Owner</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for data in targetData %}
                                <tr>
                                    <td><a href="{{ path('dashboard', {id:data.id}) }}">{{ data.objectiveRef }}</a></td>
                                    <td>{{ data.status }}</td>
                                    <td>{{ data.impactArea }}</td>
                                    <td>{{ data.objective }}</td>
                                    <td>{{ data.baseline }}</td>
                                    <td>{{ data.owner }}</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('table').dataTable();
        });
    </script>
{% endblock %}
